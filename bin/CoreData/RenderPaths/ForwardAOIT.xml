<renderpath>
    <rendertarget name="AOITSPClearMask" sizedivisor="1 1" format="r32u" filter="false" compute="true" />
    <!-- default 4 nodes, struct size = 4x float -->
    <rendertarget name="AOITSPDepthData" sizedivisor="1 1" shaderbuffer="true" structsize="16" persistent="true" />
    <!-- default 4 nodes, struct size = 4x uint -->
    <rendertarget name="AOITSPColorData" sizedivisor="1 1" shaderbuffer="true" structsize="16" persistent="true" />
    
    <command type="clear" color="fog" depth="1.0" stencil="0" />
    <command type="quad" vs="AOIT_Clear" ps="AOIT_Clear" output="AOITSPClearMask" />
    <command type="scenepass" pass="base" vertexlights="true" metadata="base" />
    <command type="forwardlights" pass="light" />
    <command type="scenepass" pass="postopaque" />
    <command type="scenepass" pass="refract">
        <texture unit="environment" name="viewport" />
    </command>
    <command type="scenepass" pass="aoit" vertexlights="true" >
        <output index="0" name="AOITSPClearMask" />
        <output index="1" name="AOITSPDepthData" />
        <output index="2" name="AOITSPColorData" />
    </command>
    <command type="quad" vs="AOIT_Resolve" ps="AOIT_Resolve" blend="aoitresolve" >
        <texture unit="0" name="AOITSPClearMask" />        
        <texture unit="1" name="AOITSPDepthData" />
        <texture unit="2" name="AOITSPColorData" />
    </command>
</renderpath>
